                    android:layout_height="wrap_content"
                    android:text="CURRENT TIME"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/clock_text"
